                                              </tr>
                                        </table>
                                    </center>
                                    <br/>
                                <group>
                                    <group>
                                        <field name="tipo_de_lente"  attrs="{'readonly':[('state','in',('cancelada','cerrada'))]}"/>
                                    </group>
                                    <group>
